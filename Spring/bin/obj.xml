<?xml version="1.0" encoding="UTF-8"?>
<beans
xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id="hello" class="ObjectInjection.line" >
<property name="p1" ref="ZeroPoint"/>
<property name="p2" > 

<bean  class="ObjectInjection.point">
<property name="x" value="1"/>
<property name="y" value="4"/>
</bean>

</property>

<property name="p3" >

<bean  class="ObjectInjection.point">
<property name="x" value="5"/>
<property name="y" value="9"/>
</bean>


</property>

</bean>


<bean id="ZeroPoint" class="ObjectInjection.point">
<property name="x" value="0"/>
<property name="y" value="0"/>
</bean>
<alias name="hello" alias="inner-bean"/>



</beans>